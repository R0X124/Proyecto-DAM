<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Imagen del curso -->
    <ImageView
        android:id="@+id/cursoImagen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Imagen del Curso"
        android:src="@drawable/cursos"
        android:padding="4dp" />

    <!-- Contenedor para los textos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Nombre del curso -->
        <TextView
            android:id="@+id/cursoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Curso"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <!-- Descripción del curso -->
        <TextView
            android:id="@+id/cursoDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción general del curso"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingBottom="4dp" />

        <!-- Contenedor horizontal para 'Profesor' -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Etiqueta 'Profesor:' -->
            <TextView
                android:id="@+id/cursoProfesorEtiqueta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profesor: "
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Estado dinámico del profesor -->
            <TextView
                android:id="@+id/cursoProfesorEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente de asignar"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Día del curso -->
        <TextView
            android:id="@+id/cursoDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Día: Lunes"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingTop="4dp" />

        <!-- Horario del curso -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <!-- Horario de inicio -->
            <TextView
                android:id="@+id/cursoHorarioInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio: 7:00 PM"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingEnd="8dp" />

            <!-- Horario final -->
            <TextView
                android:id="@+id/cursoHorarioFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fin: 10:00 PM"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
